<div class="container">
	<h2>User info</h2>
	<%= form_for(@user) do |f| %>
	<p><strong>name</strong>
		<%= f.text_field :name %>
	</p>
	<p><strong>Image</strong>
		<%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
	</p>
	<p><strong>introduction</strong>
		<%= f.text_area :introduction%>
	</p>
	<%= f.submit " Update User " %>
	<% end %>
</div>