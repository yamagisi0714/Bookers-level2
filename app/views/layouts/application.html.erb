<!DOCTYPE html>
<html>
  <head>
    <title>BookersLevel2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <span>Bookers</span>
        </nav>
        <nav class="nav-list">
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li>
                <%= link_to user_path(current_user) do %>
                  <p class="glyphicon glyphicon-home home">
                    Home</p>
                  <% end %>
              </li>
              <li>
                <%= link_to users_path do %>
                  <p class="glyphicon glyphicon-user users">
                    Users
                  </p>
                <% end %>
              </li>
              <li>
                <%= link_to books_path do %>
                <p class="glyphicon glyphicon-book books">
                  Books
                </p>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <p class="glyphicon glyphicon-log-out logout">
                    logout
                  </p>
                <% end %>
              </li>
            <% else %>
              <li>
                <%= link_to root_path do %>
                <p class="glyphicon glyphicon-home home"  aria-hidden="true">
                  Home
                </p>
                <% end %>
              </li>
              <li>
                <%= link_to home_about_path do %>
                <p class="glyphicon glyphicon-link about" aria-hidden="true">
                  About
                </p>
                <% end %>
              </li>
              <li>
                <%= link_to new_user_registration_path do %>
                <p class="glyphicon glyphicon-edit sign_up" aria-hidden="true">
                  sign up
                </p>
                <% end %>
              </li>
              <li>
                <%= link_to new_user_session_path do %>
                <p class="glyphicon glyphicon-log-in sign_in" aria-hidden="true">
                  login
                </p>
                <% end %>
              </li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>
    <div class="main">
    <%= yield %>
    </div>
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-xs-3 col-xs-offset-9">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
