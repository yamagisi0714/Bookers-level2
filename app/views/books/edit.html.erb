<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h1>Editing Book</h1>
			<%= form_for(@book) do |f| %>
			<div class="field row">
				<h4>Title</h4>
				<%= f.text_field :title, class: "col-xs-12 book_title" %>
			</div>
			<div class="field row">
				<h4>Body</h4>
				<%= f.text_area :body, class: "col-xs-12 book_body" %>
			</div>
			<div class="field row">
				<h4></h4>
				<%= f.submit 'Update Book', class: "btn btn-primary col-xs-12" %>
			</div>
			<% end %>
			<%= link_to "Show", book_path(@book), class: "book_#{@book}", :style=>"color:black;" %> | <%= link_to "Back", books_path, class: "back", :style=>"color:black;" %>
		</div>
	</div>
</div>
