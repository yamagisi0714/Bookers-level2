<div class="user-info newbook col-xs-3 ">
	<h2>User info</h2>
	<div class="profile-img row">
		<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
	</div>
	<table class="table">
		<thead>
			<tr></tr>
		</thead>
		<tbody>
			<tr>
				<th>name</th>
				<th><%= user.name %></th>
			</tr>
			<tr>
				<th>introduction</th>
				<th><%= user.introduction %></th>
			</tr>
		</tbody>
	</table>
	<div class="row">
		<% if user == current_user %>
		<%= link_to"", edit_user_path(current_user), class: 'col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{current_user.id}'%>
		<% else %>
		<%= link_to"", user_path(current_user), class: 'col-xs-12 btn btn-default glyphicon glyphicon-wrench user_#{current_user}' %>
		<% end %>
	</div>
	<div class="new">
		<h2>New book</h2>
		<%= form_for(newbook) do |f| %>
		<% if newbook.errors.any? %>
		    <div id="error_explanation">
		      <h2><%= newbook.errors.count %>件のエラーが発生しました。</h2>
		      <ul>
		      <% newbook.errors.full_messages.each do |message| %>
		        <li><%= message %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>
		<div class="field row">
			<p>
				<strong>Title</strong>
			</p>
		<%= f.text_field :title, class: "book_title col-xs-12" %>
		</div>
		<div class="field row">
			<p>
				<strong>Opinion</strong>
			</p>
			<%= f.text_area :body, class: "book_body col-xs-12" %>
		</div>
		<div class="actions row">
			<p></p>
			<%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
		</div>
		<% end %>
	</div>
</div>