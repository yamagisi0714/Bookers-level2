<div class=flash-message>
	<% if flash[:notice] %>
		<p><%= flash[:notice] %></p>
	<% end %>
</div>

<div class="container">
	<div class="row">
		<%= render 'books/list', books: @books, user: @user ,newbook:@newbook %>
		<div class="mybooks col-xs-9">
			<h2>Books</h2>
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td class="table-img">
							<%= link_to user_path(book.user), class: "user_#{book.user.id}" do |link|%>
							<%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size:'50x50' %>
							<% end %>
						</td>
						<td>
							<%= link_to book_path(book), class: "user_#{book.id}" do |link| %>
							<%= book.title %>
							<% end %>
						</td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
